programa {
  funcao inicio() {
    
//Declaração
real numero

//Entrada
escreva("Digite o numero para saber se é positivo ou negativo:")
leia(numero)

//Saida
se (numero <0){escreva("O numero", numero, " é negativo")}
senao se (numero>0){escreva("O numero é positivo")}

senao {escreva("O numero é neutro")}

  }
}
